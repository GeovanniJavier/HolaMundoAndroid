<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:mapbox="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- A continuacion vamos a agregar el layout para e mapa de mapbox,
         en este punto es necesario ya tener la dependencia-->

        <com.mapbox.mapboxsdk.maps.MapView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mapView"
            mapbox:mapbox_cameraTargetLat="19.54"
            mapbox:mapbox_cameraTargetLng="-99.05"
            mapbox:mapbox_cameraZoom="18"/>


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>